{% extends 'base.html.twig' %}

{% block title %}Battle{% endblock %}

{% block body %}
    <h1>Battle</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ battle.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ battle.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ battle.date ? battle.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ battle.description }}</td>
            </tr>
            <tr>
                <th>Source_url</th>
                <td>{{ battle.sourceUrl }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ battle.image }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ battle.slug }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ battle.createdAt ? battle.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ battle.updatedAt ? battle.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_battle_index') }}">back to list</a>

    <a href="{{ path('app_battle_edit', {'id': battle.id}) }}">edit</a>

    {{ include('battle/_delete_form.html.twig') }}
{% endblock %}
