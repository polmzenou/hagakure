{% extends 'base.html.twig' %}

{% block title %}Style{% endblock %}

{% block body %}
    <h1>Style</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ style.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ style.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ style.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ style.image }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ style.slug }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ style.createdAt ? style.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ style.updatedAt ? style.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_style_index') }}">back to list</a>

    <a href="{{ path('app_style_edit', {'id': style.id}) }}">edit</a>

    {{ include('style/_delete_form.html.twig') }}
{% endblock %}
