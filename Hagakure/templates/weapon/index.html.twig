{% extends 'base.html.twig' %}

{% block title %}Armes{% endblock %}

{% block body %}
<div class="list-container">
    <div class="list-header">
        <h1>üó°Ô∏è Armes</h1>
        <div class="list-actions">
            <a href="{{ path('app_home') }}" class="btn btn-secondary">‚Üê Retour</a>
            <a href="{{ path('app_weapon_new') }}" class="btn btn-primary">+ Nouvelle Arme</a>
        </div>
    </div>

    {% if weapons is empty %}
        <div class="empty-state">
            <p>Aucune arme enregistr√©e.</p>
            <a href="{{ path('app_weapon_new') }}" class="btn btn-primary">Cr√©er la premi√®re arme</a>
        </div>
    {% else %}
        <div class="table-container">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Type</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for weapon in weapons %}
                    <tr>
                        <td>{{ weapon.id }}</td>
                        <td class="font-bold">{{ weapon.name }}</td>
                        <td>{{ weapon.type }}</td>
                        <td class="actions-cell">
                            <a href="{{ path('app_weapon_edit', {'id': weapon.id}) }}" class="btn-icon btn-edit">‚úèÔ∏è</a>
                            <form method="post" action="{{ path('app_weapon_delete', {'id': weapon.id}) }}" style="display: inline;" onsubmit="return confirm('Supprimer ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ weapon.id) }}">
                                <button type="submit" class="btn-icon btn-delete">üóëÔ∏è</button>
                            </form>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}

