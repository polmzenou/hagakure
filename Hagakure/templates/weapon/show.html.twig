{% extends 'base.html.twig' %}

{% block title %}Weapon{% endblock %}

{% block body %}
    <h1>Weapon</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ weapon.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ weapon.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ weapon.type }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ weapon.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ weapon.image }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ weapon.slug }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ weapon.createdAt ? weapon.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ weapon.updatedAt ? weapon.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_weapon_index') }}">back to list</a>

    <a href="{{ path('app_weapon_edit', {'id': weapon.id}) }}">edit</a>

    {{ include('weapon/_delete_form.html.twig') }}
{% endblock %}
