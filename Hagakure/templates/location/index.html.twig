{% extends 'base.html.twig' %}

{% block title %}Lieux{% endblock %}

{% block body %}
<div class="list-container">
    <div class="list-header">
        <h1>üóæ Lieux</h1>
        <div class="list-actions">
            <a href="{{ path('app_home') }}" class="btn btn-secondary">‚Üê Retour</a>
            <a href="{{ path('app_location_new') }}" class="btn btn-primary">+ Nouveau Lieu</a>
        </div>
    </div>

    {% if locations is empty %}
        <div class="empty-state">
            <p>Aucun lieu enregistr√©.</p>
            <a href="{{ path('app_location_new') }}" class="btn btn-primary">Cr√©er le premier lieu</a>
        </div>
    {% else %}
        <div class="table-container">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>R√©gion</th>
                        <th>Latitude</th>
                        <th>Longitude</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for location in locations %}
                    <tr>
                        <td>{{ location.id }}</td>
                        <td class="font-bold">{{ location.name }}</td>
                        <td>{{ location.region }}</td>
                        <td>{{ location.latitude }}</td>
                        <td>{{ location.longitude }}</td>
                        <td class="actions-cell">
                            <a href="{{ path('app_location_edit', {'id': location.id}) }}" class="btn-icon btn-edit">‚úèÔ∏è</a>
                            <form method="post" action="{{ path('app_location_delete', {'id': location.id}) }}" style="display: inline;" onsubmit="return confirm('Supprimer ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ location.id) }}">
                                <button type="submit" class="btn-icon btn-delete">üóëÔ∏è</button>
                            </form>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}

