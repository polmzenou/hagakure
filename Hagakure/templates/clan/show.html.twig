{% extends 'base.html.twig' %}

{% block title %}Clan{% endblock %}

{% block body %}
    <h1>Clan</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ clan.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ clan.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ clan.description }}</td>
            </tr>
            <tr>
                <th>Founded_date</th>
                <td>{{ clan.foundedDate ? clan.foundedDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Disbanded_date</th>
                <td>{{ clan.disbandedDate ? clan.disbandedDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ clan.image }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ clan.slug }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ clan.createdAt ? clan.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ clan.updatedAt ? clan.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_clan_index') }}">back to list</a>

    <a href="{{ path('app_clan_edit', {'id': clan.id}) }}">edit</a>

    {{ include('clan/_delete_form.html.twig') }}
{% endblock %}
