{% extends 'base.html.twig' %}

{% block title %}Clans{% endblock %}

{% block body %}
<div class="list-container">
    <div class="list-header">
        <h1>üèØ Clans</h1>
        <div class="list-actions">
            <a href="{{ path('app_home') }}" class="btn btn-secondary">‚Üê Retour</a>
            <a href="{{ path('app_clan_new') }}" class="btn btn-primary">+ Nouveau Clan</a>
        </div>
    </div>

    {% if clans is empty %}
        <div class="empty-state">
            <p>Aucun clan enregistr√©.</p>
            <a href="{{ path('app_clan_new') }}" class="btn btn-primary">Cr√©er le premier clan</a>
        </div>
    {% else %}
        <div class="table-container">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Date de fondation</th>
                        <th>Date de dissolution</th>
                        <th>Samourais</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for clan in clans %}
                    <tr>
                        <td>{{ clan.id }}</td>
                        <td class="font-bold">{{ clan.name }}</td>
                        <td>{{ clan.foundedDate ? clan.foundedDate|date('Y-m-d') : '-' }}</td>
                        <td>{{ clan.disbandedDate ? clan.disbandedDate|date('Y-m-d') : '-' }}</td>
                        <td>{{ clan.samourais|length }}</td>
                        <td class="actions-cell">
                            <a href="{{ path('app_clan_edit', {'id': clan.id}) }}" class="btn-icon btn-edit">‚úèÔ∏è</a>
                            <form method="post" action="{{ path('app_clan_delete', {'id': clan.id}) }}" style="display: inline;" onsubmit="return confirm('Supprimer ce clan ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ clan.id) }}">
                                <button type="submit" class="btn-icon btn-delete">üóëÔ∏è</button>
                            </form>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}

