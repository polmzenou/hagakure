{% extends 'base.html.twig' %}

{% block title %}{{ samourai.name }}{% endblock %}

{% block body %}
<div class="detail-container">
    <div class="detail-header">
        <h1>⚔️ {{ samourai.name }}</h1>
        <div class="detail-actions">
            <a href="{{ path('app_samourai_index') }}" class="btn btn-secondary">← Retour</a>
            <a href="{{ path('app_samourai_edit', {'id': samourai.id}) }}" class="btn btn-primary">✏️ Modifier</a>
        </div>
    </div>

    <div class="detail-content">
        <div class="detail-info">
            <p><strong>Clan:</strong> {{ samourai.clanId ? samourai.clanId.name : 'Aucun' }}</p>
            <p><strong>Date de naissance:</strong> {{ samourai.birthDate ? samourai.birthDate|date('Y-m-d') : 'Inconnue' }}</p>
            <p><strong>Date de mort:</strong> {{ samourai.deathDate ? samourai.deathDate|date('Y-m-d') : 'Inconnue' }}</p>
            {% if samourai.image %}
                <p><strong>Image:</strong> <a href="{{ samourai.image }}" target="_blank">{{ samourai.image }}</a></p>
            {% endif %}
            {% if samourai.sourceUrl %}
                <p><strong>Source:</strong> <a href="{{ samourai.sourceUrl }}" target="_blank">{{ samourai.sourceUrl }}</a></p>
            {% endif %}
        </div>

        <div class="detail-description">
            <h2>Description</h2>
            <p>{{ samourai.description }}</p>
        </div>
    </div>
</div>
{% endblock %}

